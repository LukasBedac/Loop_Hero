<Window x:Class="Loop_Hero_GUI.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loop_Hero_GUI"
        mc:Ignorable="d"
        Title="Menu" Height="800" Width="1200">

   <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Bacjground.jpg"/>
        </Grid.Background>
        <Button Content="Start" HorizontalAlignment="Left" Margin="80,500,0,0" VerticalAlignment="Top" Height="50" Width="150" FontSize="20" FontWeight="Bold" Click="StartBtn_Click"/>
        <Button Content="Continue" HorizontalAlignment="Left" Margin="80,580,0,0" VerticalAlignment="Top" Height="50" Width="150" FontSize="20" FontWeight="Bold" Click="ContinueBtn_Click"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="80,660,0,0" VerticalAlignment="Top" Height="50" Width="150" FontSize="20" FontWeight="Bold" Click="ExitBtn_Click"/>

    </Grid>
</Window>
